<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:minHeight="200dp"
    android:minWidth="160dp"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintVertical_weight="1"
        android:id="@+id/constrainImage"
        android:background="@drawable/bg_conner"
        app:layout_constraintBottom_toTopOf="@id/constraintInfoFood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageFood"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_banh_chung"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <LinearLayout
            android:paddingHorizontal="5dp"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_conner_white"
            android:layout_width="wrap_content"
            android:layout_height="19dp">

            <ImageView
                android:layout_gravity="bottom"
                android:src="@drawable/icon_dollar"
                android:id="@+id/imageDollar"
                android:layout_width="8dp"
                android:layout_height="8dp"/>

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:id="@+id/testViewPrice"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="9.50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/bg_cicle_blur"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="19dp"
            android:layout_height="19dp">

            <ImageView
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:src="@drawable/icon_heart_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.Guideline
            app:layout_constraintGuide_percent="0.93"
            android:orientation="horizontal"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            app:layout_constraintHorizontal_bias="0.1"
            android:elevation="8dp"
            android:padding="5dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_conner_white"
            android:layout_width="wrap_content"
            android:layout_height="19dp">

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="3dp"
                android:id="@+id/testViewRating"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:text="4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_star"
                android:id="@+id/imageStar"
                android:layout_width="8dp"
                android:layout_height="8dp"/>


            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/textViewTotalRating"
                android:textSize="6sp"
                tools:text="(25+)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintVertical_weight="0.55"
        app:layout_constraintTop_toBottomOf="@id/constrainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constraintInfoFood"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            app:layout_constraintHorizontal_bias="0.1"
            android:id="@+id/textViewName"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/textViewIngredient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="Red n hot pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            app:layout_constraintHorizontal_bias="0.1"
            android:id="@+id/textViewIngredient"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/bottomAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:textColor="#807E7E"
            android:textSize="10sp"
            android:text="Spicy chicken,beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewIngredient"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"
            android:id="@+id/bottomAdd"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="Add"
            android:background="@drawable/bg_conner_button_orange"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>